@using wc_Blog.Utilities
<!doctype html>
<html lang="en">
<head>

	<link rel="icon"
		  type="image/png"
		  href="~/images/favicon.ico">
	<title>Wadin' Through It</title>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

	<link href="~/Content/PagedList.css" rel="stylesheet" />

	<link href="//fonts.googleapis.com/css?family=Josefin+Sans:300, 400,700" rel="stylesheet">

	<link rel="stylesheet" href="/Content/bootstrap.css">
	<link rel="stylesheet" href="/Content/animate.css">
	<link rel="stylesheet" href="/Content/owl.carousel.min.css">

	<link rel="stylesheet" href="/Content/ionicons.min.css">
	<link rel="stylesheet" href="/Content/font-awesome.min.css">
	<link rel="stylesheet" href="/Content/flaticon.css">

	<!-- Theme Style -->
	<link rel="stylesheet" href="/Content/style.css">
</head>
<body>



	<header role="banner">
		<div class="top-bar">
			<div class="container">
				<div class="row">
					<div class="col-9 social">
						<a href="https://www.linkedin.com/in/wade-cranford-3056b31b2/"><span class="fa fa-linkedin"></span></a>
						<a href="https://github.com/wadecran"><span class="fa fa-github"></span></a>
						<a href="https://wc-portfolio.netlify.app/"><img class="personal-icon" src="~/images/favicon-16x16.png" /></a>
					</div>
					<div class="col-3 search-top">
						<!-- <a href="#"><span class="fa fa-search"></span></a> -->
						@using (Html.BeginForm("Index", "BlogPosts", FormMethod.Get, new { @class = "Search-top-form" }))
						{
							<i class="icon fa fa-search"></i>
							<input id="s" name="searchStr" class="input-block-level form-control" type="text" placeholder="Type a keyword and hit enter" />
						}

					</div>

				</div>
			</div>
		</div>

		<a href=@Url.Action("Index", "Home")><img id="banner" src="~/images/wade-banner.jpg" /></a>
		<nav class="navbar navbar-expand-md  navbar-light bg-light">
			<div class="container">


				<div class="collapse navbar-collapse" id="navbarMenu">
					<ul class="navbar-nav mx-auto">
						<li class="nav-item">
							<a class="nav-link @Html.IsActive("Home", "Index")" href=@Url.Action("Index","Home")>Home</a>
						</li>
						<li class="nav-item">
							<a class="nav-link @Html.IsActive("Home", "About")" href=@Url.Action("About","Home")>About</a>
						</li>
						<li class="nav-item">
							<a class="nav-link @Html.IsActive("Home", "Contact")" href=@Url.Action("Contact","Home")>Contact</a>
						</li>
						<li class="nav-item">
							<a class="nav-link @Html.IsActive("BlogPosts", "Index")" href="@Url.Action("Index", "Blogposts")">Blog Index</a>
						</li>
						@if (User.IsInRole("Admin"))
						{
							<li class="nav-item">
								<a class="nav-link @Html.IsActive("BlogPosts", "Create")" href=" @Url.Action("Create", "Blogposts")">Write</a>
							</li>
						}


						@Html.Partial("_LoginPartial")
					</ul>

				</div>
			</div>
		</nav>
	</header>
	<!-- END header -->

	@RenderBody()


	<footer class="site-footer">
		<div class="container">
			<div class="row mb-5">
				<div class="col-md-4">
					<h3>Thanks for stopping by!</h3>
					<p>
						<img src="~/images/wade-pool-c.jpg" alt="Image placeholder" class="img-fluid" />
					</p>

					<p>
						I appreciate you taking the time to visit my blog, and maybe even read what I have to say. This page started as a way to practice the basics of ASP.NET, but will continue to serve as a journal
						of all of my coding adventures and possibly some of my other interests. So come back soon, and see if there's anything that peeks your own interests.
					</p>
				</div>
				<div class="col-md-6 ml-auto">
					<div class="row">
						<div class="col-md-7">
							<h3>Latest Post</h3>
							<div class="post-entry-sidebar">
								<ul>
									@Html.Action("_RecentPostsFooter", "BlogPosts")
								</ul>
							</div>
						</div>
						<div class="col-md-1"></div>

						<div class="col-md-4">

							<div class="mb-5">
								<h3>Quick Links</h3>
								<ul class="list-unstyled">
									<li><a href="/Home/Index" @Html.IsActive("Home", "Index")>Home</a></li>
									<li><a href="/Home/About" @Html.IsActive("About", "Index")>About</a></li>
									<li><a href="/Home/Contact" @Html.IsActive("Contact", "Index")>Contact</a></li>
								</ul>
							</div>

							<div class="mb-5">
								<h3>Social</h3>
								<ul class="list-unstyled footer-social">
									<li><a href="#"><span class="fa fa-linkedin"></span></a></li>
									<li><a href="#"><span class="fa fa-github"></span></a></li>
									<li><a href="#"><img src="~/images/favicon-16x16.png" /></a></li>

								</ul>
							</div>
						</div>
					</div>
				</div>
			</div>
			<div class="row">
				<div class="col-md-12">
					<!-- Link back to Colorlib can't be removed. Template is licensed under CC BY 3.0. -->
					Copyright &copy;
					<script>document.write(new Date().getFullYear());</script> All rights reserved | This template is made with <i class="fa fa-heart-o" aria-hidden="true"></i> by <a href="https://colorlib.com" target="_blank">Colorlib</a>
					Modified By Wade Cranford
					<!-- Link back to Colorlib can't be removed. Template is licensed under CC BY 3.0. -->
				</div>
			</div>
		</div>
	</footer>
	<!-- END footer -->
	<!-- loader -->
	<div id="loader" class="show fullscreen"><svg class="circular" width="48px" height="48px"><circle class="path-bg" cx="24" cy="24" r="22" fill="none" stroke-width="4" stroke="#eeeeee" /><circle class="path" cx="24" cy="24" r="22" fill="none" stroke-width="4" stroke-miterlimit="10" stroke="#f4b214" /></svg></div>


	<script src="~/Scripts/jquery-3.2.1.min.js"></script>
	<script src="~/Scripts/jquery-migrate-3.0.0.js"></script>
	<script src="~/Scripts/popper.min.js"></script>
	<script src="~/Scripts/bootstrap.min.js"></script>
	<script src="~/Scripts/owl.carousel.min.js"></script>
	<script src="~/Scripts/jquery.waypoints.min.js"></script>
	<script src="~/Scripts/jquery.stellar.min.js"></script>
	<script src="~/Scripts/JavaScript.js"></script>

	<script src="~/Scripts/main.js"></script>
	@RenderSection("Scripts", false)
</body>
</html>
