@using wc_Blog.Models
@model IEnumerable<BlogPost>




<section class="site-section pt-5">
	<div class="container">
		<div class="row">
			<div class="col-md-12">

				<div class="owl-carousel owl-theme home-slider">
					@foreach (var post in Model.Take(3))
					{
						<div>
							@if (post.MediaURL != null)
							{
								<a href=@Url.Action("Details", "BlogPosts", new { slug = post.Slug }) class="a-block d-flex align-items-center height-lg" style="background-image: url('@post.MediaURL'); ">
									<div class="text half-to-full">
										<div class="post-meta">
											<span class="category">@post.Category</span>
											<span class="mr-2">@post.Created.ToString("MMM dd yyyy") </span> &bullet;
											<span class="ml-2"><span class="fa fa-comments"></span> @post.Comments.Count</span>
										</div>
										<h3>@post.Title</h3>
										<p>@post.Abstract</p>
									</div>
								</a>
							}
							else
							{
								<a href=@Url.Action("Details", "BlogPosts", new { slug = post.Slug }) class="a-block d-flex align-items-center height-lg" style="background-image: url('/images/img_1.jpg'); ">
									<div class="text half-to-full">
										<div class="post-meta">
											<span class="category">@post.Category</span>
											<span class="mr-2">@post.Created.ToString("MMM dd yyyy") </span> &bullet;
											<span class="ml-2"><span class="fa fa-comments"></span> @post.Comments.Count</span>
										</div>
										<h3>@post.Title</h3>
										<p>@post.Abstract</p>
									</div>
								</a>
							}
						</div>
					}
				</div>

			</div>
		</div>
		<div class="row">
			@foreach (var post in Model.Skip(3).Take(3))
			{
				<div class="col-md-6 col-lg-4">
					@if (post.MediaURL != null)
					{
						<a href=@Url.Action("Details", "BlogPosts", new { slug = post.Slug }) class="a-block d-flex align-items-center height-md" style="background-image: url('@post.MediaURL'); ">
							<div class="text">
								<div class="post-meta">
									<span class="category">@post.Category</span>
									<span class="mr-2">@post.Created.ToString("MMM dd yyyy") </span> &bullet;
									<span class="ml-2"><span class="fa fa-comments"></span>@post.Comments.Count</span>
								</div>
								<h3>@post.Title</h3>
							</div>
						</a>
					}
					else
					{
						<a href=@Url.Action("Details", "BlogPosts", new { slug = post.Slug }) class="a-block d-flex align-items-center height-md" style="background-image: url('/images/img_2.jpg'); ">
							<div class="text">
								<div class="post-meta">
									<span class="category">@post.Category</span>
									<span class="mr-2">@post.Created.ToString("MMM dd yyyy") </span> &bullet;
									<span class="ml-2"><span class="fa fa-comments"></span>@post.Comments.Count</span>
								</div>
								<h3>@post.Title</h3>
							</div>
						</a>
					}
				</div>
			}
		</div>
	</div>


</section>
<!-- END section -->

<section class="site-section py-sm">
	<div class="container">
		<div class="row">
			<div class="col-md-6">
				<h2 class="mb-4">Recent Posts</h2>
			</div>
		</div>
		<div class="row blog-entries">
			<div class="col-md-12 col-lg-8 main-content">

				@Html.Action("_BtnBlogNav", "BlogPosts")

			</div>

			<!-- END main-content -->
			@Html.Partial("_SideNav")
		</div>
	</div>
</section>
